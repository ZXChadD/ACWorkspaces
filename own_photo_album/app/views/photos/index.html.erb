<table class="table table-striped table-condensed">

    <% @photo.each do |photo| %>
    <tr>
      <td><%= photo.title %></td>
      <td><%= photo.date %></td>
      <td><%= link_to "Show", photo_path(photo) %></td>
      <td><%= link_to "Edit", edit_photo_path(photo) %></td>
      <td><%= link_to "Destroy", photo_path(photo), method: :delete, data:{confirm: "Are you sure?"} %></td>
      <td><%= image_tag photo.file_location.url, size: "140x140",class: "img-thumbnail" %>
    </td>
    <% end %>

    </tr>
    <tr>
      <td colspan="6" class = "new_photo"><%= link_to "New photo", new_photo_path %></td>
    </tr>
</table>
